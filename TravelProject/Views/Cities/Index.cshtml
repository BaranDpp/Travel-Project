@model IEnumerable<TravelProject.Models.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">City List</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table id="cityTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Country)</td>
                            <td>  <img src="@item.ImageUrl" alt="@item.Name" style="max-height: 100px; max-width: 100px;" /></td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.CityId" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.CityId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.CityId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-3">
                <a asp-action="Create" class="btn btn-success">Create New City</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#cityTable').DataTable();
    });
</script>
