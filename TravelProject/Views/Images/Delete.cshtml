@model TravelProject.Models.Image

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete Image</h1>
    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <h4>Image Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Url)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Url)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TouristSpot)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TouristSpot.Name)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="ImageId" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
