@model IEnumerable<TravelProject.Models.Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Image List</h1>
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().TouristSpot.Name)
                        </th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Url" alt="@item.Description" style="max-height: 100px; max-width: 100px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TouristSpot.Name)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ImageId" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ImageId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ImageId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
